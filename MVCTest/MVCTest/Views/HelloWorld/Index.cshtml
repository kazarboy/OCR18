@*@{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }*@

@{
    @Scripts.Render("~/Scripts/jquery.min.js")
    @Scripts.Render("~/Scripts/jquery.imgareaselect.pack.js")
    @Styles.Render("/Content/css/imgareaselect-default.css")

    <script type="text/javascript">

        jQuery(document).ready(function ($) {
            $('#photo').imgAreaSelect({
                handles: true,
                onSelectEnd: function (img, selection) {
                    $('input[name="x1"]').val(selection.x1);
                    $('input[name="y1"]').val(selection.y1);
                    $('input[name="x2"]').val(selection.x2);
                    $('input[name="y2"]').val(selection.y2);

                    //alert('width: ' + selection.width + '; height: ' + selection.height + '; X1: ' + selection.x1 + '; Y1: ' + selection.y1 + '; X2: ' + selection.x2 + '; Y2: ' + selection.y2);
                    $("#X1").text(selection.x1);
                    $("#Y1").text(selection.y1);
                    $("#Width").text(selection.width);
                    $("#Height").text(selection.height);
                }
            });
        });
    </script>
}

@{
    ViewBag.Title = "Movie List";
}

    <div class="container-fluid">
        <div class="col-md-6">
            <img id="photo" src="@Url.Content("~/Content/Image/check.pdf")" alt="Sample Photo" />
        </div>
        <div class="col-md-3">
            <input type="submit" value="Crop" onclick="location.href='@Url.Action("CropImage", "HelloWorld")'" />
            <br />
            <form action="@Url.Action("Index","HelloWorld")" method="post">
                <input type="hidden" name="x1" value="" />
                <input type="hidden" name="y1" value="" />
                <input type="hidden" name="x2" value="" />
                <input type="hidden" name="y2" value="" />
                <input type="submit" name="submit" value="Submit" />
            </form>
            <br />
            <label>X1 :</label>
            <label id="X1"></label>
            <label>Y1 :</label>
            <label id="Y1"></label>
            <label id="X2">X2 :</label>
            <label id="Y2">Y2 : </label>
            <label>Width :</label>
            <label id="Width"></label>
            <label>Height :</label>
            <label id="Height"></label>
        </div>
    </div>
